datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  translations Json?
  imageUrl    String?
  link        String?
  tags        String[]
  createdAt   DateTime @default(now())
  
  @@unique([link])
}
